{
    "name": "kiora/health-check-bundle",
    "type": "symfony-bundle",
    "description": "Production-ready Symfony bundle for comprehensive application health checks with database, Redis, S3, and HTTP endpoint monitoring. Security-first design with auto-tagging support.",
    "keywords": ["symfony", "health-check", "monitoring", "healthcheck", "uptime", "status", "symfony-bundle", "kubernetes", "docker"],
    "license": "MIT",
    "authors": [
        {
            "name": "James Hembert",
            "email": "james@kiora.tech"
        }
    ],
    "homepage": "https://github.com/kiora-tech/health_check_bundle",
    "support": {
        "issues": "https://github.com/kiora-tech/health_check_bundle/issues",
        "source": "https://github.com/kiora-tech/health_check_bundle"
    },
    "require": {
        "php": ">=8.3",
        "symfony/framework-bundle": "^6.4|^7.0|^8.0",
        "symfony/dependency-injection": "^6.4|^7.0|^8.0",
        "symfony/config": "^6.4|^7.0|^8.0",
        "symfony/http-kernel": "^6.4|^7.0|^8.0",
        "symfony/routing": "^6.4|^7.0|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0|^12.0",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-symfony": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpro/grumphp": "^2.0",
        "doctrine/dbal": "^3.0|^4.0",
        "league/flysystem": "^3.0",
        "predis/predis": "^2.0"
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse --memory-limit=256M",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "qa": "grumphp run"
    },
    "autoload": {
        "psr-4": {
            "Kiora\\HealthCheckBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kiora\\HealthCheckBundle\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.0-dev"
        }
    }
}
